{
  "name": "smart-cat-backend",
  "version": "1.0.0",
  "description": "Local backend for Smart Cat Home dashboard",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development TSX_WATCH_IGNORE=dist/**,datasets/**,logs/** tsx watch --env-file .env src/index.ts",
    "dev:legacy": "NODE_OPTIONS='--max-old-space-size=4096' ts-node --transpile-only -r dotenv/config src/index.ts",
    "dev:build": "npm run build && node -r dotenv/config dist/index.js",
    "clean": "node scripts/clean-dist.mjs",
    "build": "node build.mjs",
    "rebuild": "npm run clean && FORCE_FULL_BUILD=1 node build.mjs",
    "build:tsc": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "start": "node -r dotenv/config dist/index.js",
    "test:cat-policy": "tsx scripts/test-cat-policy.ts",
    "seed:snapshot": "node scripts/post-snapshot.js",
    "chat:smoke": "SMART_CAT_BACKEND_URL=https://localhost:4000 NODE_TLS_REJECT_UNAUTHORIZED=0 node scripts/chat_smoke_test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@xenova/transformers": "^2.17.0",
    "apn": "^2.2.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "edge-tts": "^1.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "firebase-admin": "^13.6.0",
    "google-tts-api": "^2.0.1",
    "helmet": "^8.0.0",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.1",
    "mp3-duration": "^1.1.0",
    "pdf-lib": "^1.17.1",
    "prom-client": "^15.1.3",
    "serialport": "^13.0.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.2",
    "esbuild": "^0.25.12",
    "glob": "^11.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3"
  }
}
